{%  extends 'admin/partials/layout.twig' %}

{%  block content %}
    <form action="{{ path_for('auth.signup') }}" method="post">
        <div class="form-group{{ errors.username ? ' has-error' : '' }}">
            <label for="username">Name</label>
            <input type="username" name="username" id="username" placeholder="username" value="{{ old.username }}">
            {% if errors.username %}
                <span class="help-block">{{ errors.username | first }}</span>
            {% endif %}
        </div>
        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="password">
            {% if errors.password %}
                <span class="help-block">{{ errors.password | first }}</span>
            {% endif %}
        </div>
        <button type="submit">Sign Up</button>
        {{ csrf.field | raw }}
    </form>
{%  endblock %}