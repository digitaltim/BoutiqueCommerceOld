{% extends 'base.twig' %}

{% block htmlHeadCss %}
    <link href='/css/login.css?v=1.1' rel='stylesheet' type='text/css'>
{% endblock %}

{% block htmlBodyContent %}
    <body onload='document.getElementById("username").focus();'>
    <header id='pageHeader'>
        <div id='topLineContainer'>
            <div id='headerTitle'>
                <h1><a href="{{ path_for('home')}}">{{ storeName }}</a>    &nbsp;
                    {% if not isLive %}
                        <span style='color: grey;'>{LOCAL TESTING}</span>
                    {% endif %}
                </h1>
            </div>
        </div>
    </header>
    <main>
        <div id='mainContainerSmall'>
            <h1>Login</h1>
            <h5>Authorized for use by {{ storeName }} employees and associates only.</h5>
            <form name="f1" method="post" action="{{ path_for('authentication.post.login')}}">
                {% if generalFormError %}
                    <span class="generalFormError">{{ generalFormError }}</span>
                {% endif %}
                {% include 'admin/partials/formFields.twig' %}
            </form>
        </div>
    </main>

{% endblock %}

{% block htmlBodyJs %}
    <script type='text/javascript' src='/js/uiHelper.js'></script>
{% endblock %}
