{% extends 'base.twig' %}

{% block htmlHeadCss %}
    <link href='/css/orm.css' rel='stylesheet' type='text/css'>
{% endblock %}

{% block htmlBodyContent %}
    {% include 'admin/partials/pageHeader.twig' %}

    <a href="{{ path_for(insertLink.route) }}">{{ insertLink.text }}</a>
    <div id='scrollingTableContainer'>
        <table class='scrollingTable'>
            <thead>
                {% set break = false %}
                {% for row in results if not break %}
                    <tr>
                        {% for key in row|keys %}
                            <th>{{ key }}</th>
                        {% endfor %}
                    </tr>
                    {% set break = true %}
                {% endfor %}
            </thead>
            <tbody>
            {% for row in results %}
                <tr>
                    {% for column in row %}
                        {% if loop.first %}
                            <td><a href='{{ path_for(updateRoute, {'primaryKey': column}) }}' title='update'>{{ column }}</a></td>
                        {% else %}
                            <td>{{ column }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script type='text/javascript' src='/js/uiHelper.js'></script>
{% endblock %}

